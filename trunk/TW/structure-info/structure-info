component:
	banner.jsp			主页顶部LOGO
	copyRight.jsp		主页底部LOGO
	ipHolder.jsp		主页左侧，计算流量
	linker.jsp			位于copyRight.jsp上，用于连接到类似小百合之类的网站
	login.jsp			登陆页面
	navigation.jsp		在banner.jsp左下方 ，放置 ‘首页’， ‘联系我们’之类的连接
	search.jsp			在banner.jsp右下方，用于搜索文章
	
css：
	存放层叠样式
	
img:
	存放图片
	
js:
	存放JavaScript文件
	
layouts：
	container.jsp		位于主页中间，放置 ‘通知’，'新闻'等板块
	standard.jsp		tiles框架的一个模板页面

page:
	detail.jsp			显示具体的文章
	index.jsp			主页
	list.jsp			通过navigation.jsp 或 search.jsp 生成的文章列表
	
WEB-INF:
	lib					存放jar包
	view.xml			定义了detail.jsp、index.jsp、list.jsp显示模板的模板
	web.xml				
	
hello.jsp				导向index.jsp
	